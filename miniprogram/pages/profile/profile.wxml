<!--pages/profile/profile.wxml-->
<view class="profile">
  <view class="profile-img">
    <open-data type="userAvatarUrl"></open-data>
  </view>
  <view class="profile-name">
    <open-data type="userNickName"></open-data>
  </view>
</view>

<button open-type="getUserInfo" bindgetuserinfo="getUser" size="large" style="width:100%;background:#ffa;color:#333">获取用户信息</button>