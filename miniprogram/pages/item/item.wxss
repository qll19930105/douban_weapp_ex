/* pages/item/item.wxss */
/* 背景 */
.background{
  position: fixed;
  left:0;
  top:0;
  right:0;
  bottom:0;
  height:100%;
  width:100%;
  z-index: -1000;
  opacity: .1;
}
/* 电影简介 */
.meta{
  display: flex;
  flex-direction: column;
  align-items: center;
  padding:50rpx 40rpx;
}
/* 电影简介 图片海报 */
.poster{
  width:100%;
  height:800rpx;
  margin:20rpx;
}
/* 电影简介 标题 */
.title{
  font-size: 42rpx;
  color:#444;
}
/* 电影简介 文本样式 */
.info{
  font-size: 24rpx;
  color:#888;
  margin-top:20rpx;
  width:80%;
}
/* 电影摘要 */
.summary{
  width:80%;
  margin:30rpx auto;
}
/* 电影摘要 标题 */
.label{
  display: block;
  font-size: 30rpx;
  margin-bottom:30rpx;
}
/* 电影摘要 内容*/
.content{
  color:#666;
  font-size: 22rpx;
  padding:2em;
}
